<Window x:Class="Temperature.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Temperature"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="請輸入攝氏溫度" HorizontalAlignment="Left" Margin="229,103,0,0" VerticalAlignment="Top" Width="95"/>
        <Label Content="請輸入華氏溫度" HorizontalAlignment="Left" Margin="229,158,0,0" VerticalAlignment="Top" Width="95"/>
        <TextBox x:Name="txtC" HorizontalAlignment="Center" Margin="0,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" KeyUp="txtC_KeyUp"/>
        <TextBox x:Name="txtF" HorizontalAlignment="Center" Margin="0,162,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" KeyUp="txtF_KeyUp"/>
        <Button x:Name="txtEnter" Content="換算" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Height="27" Width="48" Click="txtEnter_Click"/>

    </Grid>
</Window>
